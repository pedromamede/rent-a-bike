<% if @aluguel.errors.any? %>
  <div class='alert alert-danger'>
      <%= @aluguel.errors.full_messages.join(";") %>
  </div>
<% end %>

<%= form_with(model: @aluguel, url: alugueis_path, class: 'bootstrap-form') do |form| %>
  <div class="mb-3">
    <%= form.label 'Escolha sua Bike', class: 'form-label' %>
    <%= form.collection_select :bike_id, Bike.all, :id, :modelo, {}, {class: 'form-select'} %>
  </div>

  <div class="mb-3">
    <%= form.label 'Onde vai retirar?', class: 'form-label' %>
    <%= form.collection_select :ponto_id, Ponto.all, :id, :nome, {}, {class: 'form-select'} %>
  </div>

  <div class="mb-3">
    <%= form.label "Quando vai retirar?", class: 'form-label' %>
    <%= form.datetime_field :hora_retirada %>
  </div>

  <div class="mb-3">
    <%= form.label :forma_pagamento %>
    <%= form.collection_select(:forma_pagamento, ["Cartão de crédito", "Cartão de débito", "Dinheiro", "Pix"], :to_s , :to_s, {}, { class: 'form-select' }) %>
  </div>

  <%= form.submit 'Alugar Bike!', class: 'btn btn-primary' %>
<% end %>
